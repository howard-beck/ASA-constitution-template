%%% SETTINGS

%% Enable compact references
% Example: Inside of Article II, a reference to Article II, Section 2
%     would only show as Section II. A reference to Article III Section 1
%     would show as Article III Section 1.
\setbool{MakeCompactRefs}{true}

%% Table of Contents depth
\setcounter{tocdepth}{5}

%% Section heading styling
\def\appendixstyle{\normalfont\Large\bfseries\scshape}
\def\articlestyle{\normalfont\Large\bfseries\scshape\underline}
\def\sectionstyle{\normalfont\large\bfseries\scshape}
\def\defaultstyle{\normalfont\normalsize\bfseries\scshape}

%% Section heading numbering
\let\appendixnumstyle\Alph
\let\articlenumstyle\Roman
\let\sectionnumstyle\arabic
\let\defaultnumstyle\arabic

%% Section header line breaks
\setbool{sectionlinebreak}{true}

%% Text after section header (such as ., :, etc)
\def\afterheadertext{}

%% do section header full info
\setbool{headerfullinfo}{true}
%% section header full info side
% options: margin, inline
\def\headerfullinfoside{margin}
\def\headerfullinfosidestyle{\tiny}

%% max size for margin header info
\def\maxheaderfullinfosize{3}

%% put appendix letter in appendix article?
% this solves the following problem: referencing Article II
%     inside of Appendix A, Article I may refer to
%     Appendix A, Article II or [Main Text] Article II...
%     at least when MakeCompactRefs is true
% setting this to true would reference it as Article A.II
\setbool{ArticleWithAppendixPrepend}{true}